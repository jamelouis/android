<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.jamelouis.travel_mate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splash"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".utilities.Checklist"
            android:label="@string/title_activity_select_city"
            android:theme="@style/AppTheme_picker" />
        <activity android:name=".travel.transport.SelectModeOfTransport"
            android:label="@string/title_activity_select__mode_of_transport"
            android:theme="@style/AppTheme_picker" />

        <activity android:name=".utilities.ShareContact" />
        <activity android:name=".travel.Hotels"
            android:label="@string/title_activity_hotels"
            android:theme="@style/AppTheme_picker" />
    </application>

</manifest>